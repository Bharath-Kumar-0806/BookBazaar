<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!--  Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- TOASTR -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.1.0/mdb.min.css" rel="stylesheet" />
    <!-- ✅ DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <style>
        .toast-success {
            background-color: #51A351 !important;
            color: white !important;
        }

        .toast-error {
            background-color: #BD362F !important;
            color: white !important;
        }

        .toast-info {
            background-color: #2F96B4 !important;
            color: white !important;
        }

        .toast-warning {
            background-color: #F89406 !important;
            color: white !important;
        }

        .toast {
            opacity: 0.95 !important;
            font-family: Roboto, sans-serif;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-gradient  bg-dark ">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand text-white" asp-controller="Admin" asp-action="Index"><i class="fa-solid fa-user-shield me-2"></i>Admin</a>

            <!-- Collapsible Content -->
            <div class="collapse navbar-collapse" id="adminNavbar">
                <!-- Left Links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-white" aria-current="page" asp-controller="Admin" asp-action="Index"><i class="fas fa-tachometer-alt me-1"></i>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Book" asp-action="BooksList"><i class="fas fa-book me-1"></i>Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Category" asp-action="Index"><i class="fa-solid fa-list me-1"></i>Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Orders"><i class="fa-solid fa-box me-1"></i>Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Manageuser"><i class="fas fa-users me-1"></i>Users</a>
                    </li>
                </ul>

                <!-- Right Links -->
                <ul class="navbar-nav d-flex flex-row">

                    <!-- User Dropdown -->
                    <li class="nav-item dropdown">

                         @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown me-3 d-flex align-items-center">
                                <a data-mdb-dropdown-init
                                   class="nav-link dropdown-toggle d-flex align-items-center text-white"
                                   href="#"
                                   id="navbarDropdownMenu"
                                   role="button"
                                   aria-expanded="false"
                                   data-mdb-toggle="dropdown">
                                    <span class="me-2">Hello, <strong>@User.Identity.Name</strong></span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end"
                                    aria-labelledby="navbarDropdownMenu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Settings"><i class="fa-solid fa-gear"></i> Settings</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</a>
                                    </li>
                                </ul>
                            </div>
                        } 
                    </li>
                </ul>
            </div>
        </div>
    </nav>

   
    <div>
        @RenderBody()
    </div>
    <!--  JQUERY -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!-- MDB JS -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.1.0/mdb.umd.min.js"></script>
    <!--  Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- ✅ DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    @await Html.PartialAsync("_Notifications")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
