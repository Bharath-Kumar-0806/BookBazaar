@model AdminDashboardVM

<div class="container mt-4">
    <h3 class="mb-4 text-primary"><i class="bi bi-speedometer2 me-2"></i> Admin Dashboard</h3>

    <div class="row g-4">

        <!-- Total Books -->
        <div class="col-md-4">
            <div class="card border shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary rounded-circle p-3 text-white me-3">
                        <i class="bi bi-book" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Total Books</h6>
                        <h4 class="fw-bold">@Model.TotalBooks</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Categories -->
        <div class="col-md-4">
            <div class="card border shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning rounded-circle p-3 text-white me-3">
                        <i class="bi bi-folder2-open" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Categories</h6>
                        <h4 class="fw-bold">@Model.TotalCategories</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Registered Users -->
        <div class="col-md-4">
            <div class="card border shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success rounded-circle p-3 text-white me-3">
                        <i class="bi bi-people" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Users</h6>
                        <h4 class="fw-bold">@Model.TotalUsers</h4>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row mt-5 g-4">
        <!-- Recent Books -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 text-primary">📚 Recent Books</h6>
                    <a asp-controller="Book" asp-action="BooksList" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.RecentBooks != null && Model.RecentBooks.Any())
                    {
                        foreach (var book in Model.RecentBooks)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @book.Title
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">
                            No recent books available.
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h6 class="mb-0 text-primary">⚡ Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Book" asp-action="CreateBook" class="btn btn-outline-success">
                            <i class="bi bi-plus-circle me-1"></i> Add New Book
                        </a>
                        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-warning">
                            <i class="bi bi-folder-plus me-1"></i> Add New Category
                        </a>
                        <a asp-controller="Admin" asp-action="Manageuser" class="btn btn-outline-info">
                            <i class="bi bi-person-gear me-1"></i> Manage Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

