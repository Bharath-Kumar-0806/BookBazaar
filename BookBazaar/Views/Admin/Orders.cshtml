@model List<OrdersManageVM>
@{
    ViewData["Title"] = "Manage Orders";
}
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <div>
                <h5><i class="bi bi-bag-check-fill me-2"></i> Manage Orders</h5>
            </div>
            <div>
                <form asp-action="Orders" asp-controller="Admin" method="post" class="mb-3 d-flex align-items-center">
                    <label for="statusFilter" class="me-2 mb-0">Filter by Status:</label>
                    <select name="status" id="statusFilter" class="form-select w-auto me-2"  onchange="this.form.submit()">
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <option value="0" selected="@("" == @ViewBag.ErrorMessage)">All</option>
                            <option value="1" selected="@("Pending" == @ViewBag.ErrorMessage)">Pending</option>
                            <option value="2" selected="@("Shipped" == @ViewBag.ErrorMessage)">Shipped</option>
                            <option value="3" selected="@("Delivered" == @ViewBag.ErrorMessage)">Delivered</option>
                            <option value="4" selected="@("Cancelled" == @ViewBag.ErrorMessage)">Cancelled</option>
                        }
                        else
                        {
                            <option value="">All</option>
                            <option value="1">Pending</option>
                            <option value="2">Shipped</option>
                            <option value="3">Delivered</option>
                            <option value="4">Cancelled</option>
                        }
                    </select>
                </form>
                
            </div>
           
        </div>
        
        
    @if (Model != null && Model.Count > 0)
    {
        <div class="card-body table-responsive">
            <table id="ordersDataTable" class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Total Amount</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th style="width: 240px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.CustomerName <br /><small class="text-muted">@order.Email</small></td>
                            <td>₹@order.TotalAmount</td>
                            <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                            <td>
                                <span class="badge @(order.Status == "Pending" ? "bg-warning text-dark" :
                                                  order.Status == "Shipped" ? "bg-info" :
                                                  order.Status == "Delivered" ? "bg-success" :
                                                  order.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                @order.Status
                                </span>
                            </td>
                            <td>
                                <form asp-action="UpdateOrderStatus" asp-controller="Admin" method="post" class="d-flex align-items-center">
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                    <select name="newStatus" 
                                            class="form-select form-select-sm me-2"
                                           asp-items="@(new SelectList(order.AvailableStatuses, "Id", "Name"))">
                                    <option selected disabled>Change Status</option>
                                    </select>
                                    <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                </form>
                            </td>
                        </tr>
                     }
                </tbody>
            </table>
        </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>No orders found.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $('#ordersDataTable').DataTable({
            lengthChange: false,
            info: false,
            paging: true,
            searching: false,
            ordering: false,
            pageLength: 5
        });
    </script>
}