@model CartViewModel
@{
    ViewData["Title"] = "Cart";
}

<div class="container my-5">
    <h2 class="mb-4">Your Cart</h2>

    <div class="row">
        <!-- Left: Cart Items -->
        <div class="col-lg-8">
            @if (Model.Items.Any())
            {
                @foreach (var item in Model.Items)
                {
                    <div class="card mb-4">
                        <div class="card-body d-flex align-items-center">
                            <img src="~/images/@item.ImageUrl" class="img-fluid rounded" style="width: 100px;" alt="@item.BookTitle" />
                            <div class="ms-4 flex-grow-1">
                                <h5 class="mb-1">@item.BookTitle</h5>
                                <p class="mb-2">by @item.Author</p>
                                <div class="d-flex align-items-center">
                                    <label class="form-label me-2 mb-0">Qty:</label>
                                    <form method="post" asp-controller="Cart" asp-action="UpdateQuantity" asp-route-id="@item.Id" class="d-flex">
                                        <input type="number" name="quantity" class="form-control" value="@item.Quantity" min="1" style="width: 80px;" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary ms-2">Update</button>
                                    </form>
                                </div>
                            </div>
                            <div class="text-end">
                                <p class="mb-1">
                                    <i class="fa-solid fa-indian-rupee-sign"></i> @item.TotalPrice
                                </p>
                                <form method="post" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.Id">
                                    <button class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    Your cart is empty.
                </div>
            }
        </div>
        @if (@Model.Subtotal > 0)
        {
            <!-- Right: Summary -->
            <div class="col-lg-4">
           
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Summary</h5>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal</span>
                            <strong><i class="fa-solid fa-indian-rupee-sign"></i> @Model.Subtotal</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping</span>
                            <strong>Free</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total</span>
                            <strong><i class="fa-solid fa-indian-rupee-sign"></i> @Model.Total</strong>
                        </div>
                   
                        <a type="button" asp-action="CheckOut" asp-controller="Cart" class="btn btn-primary w-100">Proceed to Checkout</a>

                        <form method="post" asp-controller="Cart" asp-action="ClearCart">
                            <button type="submit" class="btn btn-outline-danger w-100 mt-2">
                                <i class="fas fa-trash-alt me-2"></i> Clear Cart
                            </button>
                        </form>
                  
                    </div>
                </div>
         
            </div>
        }
    </div>
</div>

