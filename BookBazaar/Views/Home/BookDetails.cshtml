 @model BookDetailsVM 
@{
    ViewData["Title"] = "Book Details";
}

 <div class="container my-5">
    <div class="row">
        <!-- Book Image -->
        <div class="col-md-5">
            <div class="card shadow-sm">
                <img src="~/images/@Model.PhotoPath" class="card-img-top" style="height: 450px; object-fit: contain;" alt="@Model.Title" />
            </div>
        </div>

        <!-- Book Info -->
        <div class="col-md-7">
            <h2 class="fw-bold">@Model.Title</h2>
            <h5 class="text-muted mb-3">by @Model.Author</h5>

            <div class="mb-2">
                <span class="badge bg-secondary me-2">@Model.CategoryName</span>
                <span class="text-muted">ISBN: @Model.ISBN</span>
            </div>

            <div >
                <p class="mt-3">@Model.Description</p>

                <h4 class=" mt-4 mb-3">₹@Model.Price</h4>
                <span class="text-muted">@Model.Stock in stock</span>
            </div>
            @if (Model.Stock > 0)
            {
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-grid gap-2  col-3">
                        <form class="add-to-cart-btn-form" method="post">
                            <input type="hidden" name="bookId" value="@Model.Id" />
                            <button type="submit" class="btn btn-sm btn-success w-100 add-to-cart-btn" >
                                <i class="bi bi-cart-plus me-1"></i> Add to Cart
                            </button>
                        </form>
                        <form asp-action="BuyNow" asp-controller="Orders" class="buy-now-form" method="post">
                            <input type="hidden" name="bookId" value="@Model.Id" />
                            <button class="btn btn-primary w-100 buy-now-btn" type="submit">
                            Buy Now
                            </button>
                        </form>
                        <button class="btn btn-danger" type="button" onclick="addToWishList(@Model.Id)">
                            Add to favorites
                        </button>
                    </div>
                }
                else
                {
                    <div class="d-grid gap-2  col-3">
                        <button type="button" class="btn btn-sm btn-success w-100" onclick="showLoginPopup()">
                                <i class="bi bi-cart-plus me-1"></i> Add to Cart
                            </button>

                        <button class="btn btn-primary w-100" type="button" onclick="showLoginPopup()">
                                Buy Now
                            </button>

                        <button class="btn btn-danger" type="button" onclick="showLoginPopup()">
                            Add to favorites
                        </button>
                    </div>
                }
            }
            else
            {
                <span class="badge bg-danger fs-6">Out of Stock</span>
            }

            <div class="mt-4">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-arrow-left me-1"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
