
@model BookBazaar.DTOs.RegisterDTO

<div class="d-flex  justify-content-center" style="margin:100px;">
    <div class="your-box" style="width:400px;">
        <form asp-action="Register" asp-controller="Account" method="post">
            
            @* Username *@
            <div class="d-flex flex-row align-items-start mb-4 mt-2">
                <i class="fas fa-user fa-lg me-3 fa-fw pt-2"></i>
                <div class="flex-fill">
                    <div data-mdb-input-init class="form-outline mb-0">
                        <input asp-for="Username" class="form-control" />
                        <label asp-for="Username" class="form-label">Your Name</label>
                    </div>
                    <small class="text-danger"><span asp-validation-for="Username"></span></small>
                </div>
            </div>

            @* Email *@
            <div class="d-flex flex-row align-items-start mb-4">
                <i class="fas fa-envelope fa-lg me-3 fa-fw pt-2"></i>
                <div class="flex-fill">
                    <div data-mdb-input-init class="form-outline mb-0">
                        <input asp-for="Email" class="form-control" />
                        <label asp-for="Email" class="form-label">Your Email</label>
                    </div>
                    <small class="text-danger"><span asp-validation-for="Email"></span></small>
                </div>
            </div>

            @* Password *@
            <div class="d-flex flex-row align-items-start mb-4">
                <i class="fas fa-lock fa-lg me-3 fa-fw pt-2"></i>
                <div class="flex-fill">
                    <div data-mdb-input-init class="form-outline mb-0">
                        <input asp-for="Password" type="password" class="form-control" />
                        <label asp-for="Password" class="form-label">Password</label>
                    </div>
                    <small class="text-danger"><span asp-validation-for="Password"></span></small>
                </div>
            </div>

            @* Confirm Password *@
            <div class="d-flex flex-row align-items-start mb-4">
                <i class="fas fa-key fa-lg me-3 fa-fw pt-2"></i>
                <div class="flex-fill">
                    <div data-mdb-input-init class="form-outline mb-0">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <label asp-for="ConfirmPassword" class="form-label">Repeat your password</label>
                    </div>
                    <small class="text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
                </div>
            </div>

            <div class="form-check d-flex justify-content-center mb-5">
                <input class="form-check-input me-2" type="checkbox" id="termsCheckbox" />
                <label class="form-check-label" for="termsCheckbox">
                    I agree all statements in <a href="#!">Terms of service</a>
                </label>
            </div>

            <div class="d-flex justify-content-center mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Register</button>
            </div>
        </form>
    </div>
</div>