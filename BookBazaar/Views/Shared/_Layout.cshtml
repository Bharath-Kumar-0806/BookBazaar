    <style>
        .scroll-btn-custom {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
            background-color: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .scroll-btn-custom.left {
            left: -40px;
        }

        .scroll-btn-custom.right {
            right: -40px;
        }

        .scroll-btn-custom[style*="display: none"] {
            opacity: 0;
            pointer-events: none;
        }

        #newArrivalsScroll,
        #bestSellersScroll {
            scrollbar-width: none;
        }

        #newArrivalsScroll::-webkit-scrollbar,
            #bestSellersScroll::-webkit-scrollbar {
                display: none;
            }

        @@media (max-width: 576px) {
            .scroll-btn-custom{
            width: 30px;
            height: 30px;
          }

        }
        

        .text-truncate-single {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            display: block;
        }

        .book-image-wrapper {
            height: 250px;
            width: 100%;
            overflow: hidden;
            background-color: #f8f9fa; 
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .book-image-wrapper img {
            height: 100%;
            width: auto;
            object-fit: contain;
            max-width: 100%;
        }

        .toast-success {
            background-color: #51A351 !important;
            color: white !important;
        }

        .toast-error {
            background-color: #BD362F !important;
            color: white !important;
        }

        .toast-info {
            background-color: #2F96B4 !important;
            color: white !important;
        }

        .toast-warning {
            background-color: #F89406 !important;
            color: white !important;
        }

        .toast {
            opacity: 0.95 !important;
            font-family: Roboto, sans-serif;
            font-size: 14px;
        }


        .wishlistImgIcon {
            position: absolute;
            top: 0px;
            right: 0px;
            width: 30px;
            height: 30px;
            cursor: pointer;
            background: #fff;
            border-radius: 50% 0 50% 50%;
            padding: 5px;
            border: 1px rgba(0, 0, 0, 0.12) solid;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .status-pending {
            background-color: #ffc107;
            color: #212529;
        }

        .status-shipped {
            background-color: #0dcaf0;
            color: #212529;
        }

        .status-delivered {
            background-color: #198754;
            color: white;
        }

        .status-cancelled {
            background-color: #dc3545;
            color: white;
        }

        .status-default {
            background-color: #6c757d;
            color: white;
        }
    </style>

</head>
