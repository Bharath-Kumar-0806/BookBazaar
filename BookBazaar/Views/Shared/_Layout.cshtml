    @await Html.PartialAsync("_Notifications")
    <script>
        
        $('#showPassword').click(function () {
                $('#form2Example2').attr('type', $(this).is(':checked') ? 'text' : 'password');
        });

        //checking user logged in or not
         const isAuthenticated = @(User.Identity.IsAuthenticated.ToString().ToLower())

        //login popup
        function showLoginPopup() {
            const modal = new mdb.Modal(document.getElementById('loginModal'));
            modal.show();
        }

        if (isAuthenticated) {
                getWishListCount();
                getCartCount();
        }

        //gets carts count
        function getCartCount(){
            $.ajax({
                url: "@Url.Action("GetCartCount", "Home")",
                method: 'GET',
                success:function(data){
                    if (data.success && data.result) {
                        $("#cartItemsCount").text(data.result);
                    }
                }
            });
        };


        //gets wishlist count
        function getWishListCount(){
            $.ajax({
                url: "@Url.Action("GetWishListCount", "Home")",
                method: 'GET',
                success:function(data){
                    if (data.success && data.result) {
                        $("#wishListCount").text(data.result);
                    }
                }
            });
        };

        //add book to wish list
        function addToWishList(bookId){
            $.ajax({
                url:"@Url.Action("AddToWishList", "Home")",
                method: "POST",
                data: {bookId:bookId},
                success: function (data) {
                    if (data.success) {
                        getCartCount();
                        getWishListCount();
                        window.location.reload();

                    } 
                },
                error: function () {
                    alert("Server error. Please try again.");
                }
            })
        };

        //removes book from wishlist
        function removeFromWishList(bookId){
            // alert(bookId);
            $.ajax({
                url:"@Url.Action("removeFromWishList", "Home")",
                method: "POST",
                data: {bookId:bookId},
                success: function (data) {
                    if (data.success) {
                         getCartCount();
                        getWishListCount();
                         window.location.reload();
                    }
                },
                error: function () {
                    alert("Server error. Please try again.");
                }
            })
        };

        $(document).ready(function () {

            //gets categoris and loads in nav bar
            $.ajax({
                url: "@Url.Action("GetCategories", "Home")", 
                method: 'GET',
                success: function (response) {
                    const dropdown = $('#categoryDropdown');
                    dropdown.empty();
                    if (response.success && response.result && response.result.length > 0) {
                        response.result.forEach(function (category) {
                            dropdown.append(
                                `<li><a class="dropdown-item" href="/Home/GetBooksByCategoryId/${category.id}" >${category.name}</a></li>`
                            );
                        });
                    }
                    else {
                        dropdown.append('<li><a class="dropdown-item text-muted" href="#">No categories found</a></li>');
                    }
                },
                error: function () {
                    $('#categoryDropdown').html('<li><a class="dropdown-item text-danger" href="#">Error loading categories</a></li>');
                }
            });
            
            //adds to cart
            $(".add-to-cart-btn").on("click", function (e) {
               e.preventDefault();

               var form = $(this).closest("form");

               $.ajax({
                   url: "@Url.Action("AddToCart", "Cart")",
                   method: "POST",
                   data: form.serialize(),
                   success: function (data) {
                       if (data.success) {
                           window.location.reload();
                           getCartCount();
                       } else {
                            alert("Unable to add item to cart. Please try again or contact support if the problem persists.");
                       }
                   },
                   error: function () {
                       alert("Server error. Please try again.");
                   }
               });
            });
           
        }); //end
        
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
